---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SubPageHeader from '../components/SubPageHeader.astro';
import { getCollection } from "astro:content";
const allRealizations = await getCollection("realization");
import Realization from "../components/Realization.astro";
---

<Layout title="Realizacje">
	<Header/>
	<SubPageHeader subPageName="Realizacje"/>
	<section>
		<ul>
			{
				 allRealizations.map((realization, index) => (
					<Realization key={index} realizationImages={realization.data.realizationImages} realizationText={realization.data.realizationText} realizationCost={realization.data.realizationCost}/>
				))
			  }
		</ul>
	</section>
	<Footer/>
</Layout>

<style>
	section {
		width: 100%;
		display: flex;
		justify-content: center;
	}
	ul {
		font-family: var(--root-font-family);
		width: var(--width-for-mobile);
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(auto, 340px));
		gap: 20px;
		justify-content: center;
		padding: 0;
		margin: 20px 0 20px 0;
	}
	@media (min-width: 1024px) {
		ul {
			width: var(--width-for-desktop);
		}
	}
</style>