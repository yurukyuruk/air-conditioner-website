---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { getCollection } from "astro:content";
const allAirConditioners = await getCollection("air-conditioners");
import AirConditioner from "../components/AirConditioner.astro";
---

<Layout title="Klimatyzacje">
	<Header></Header>
	<div>
        <h1>Klimatyzacje</h1>
    </div>
	<section>
		<ul>
			{
				 allAirConditioners.map((airConditioner, index) => (
					<AirConditioner key={index} modelName={airConditioner.data.modelName} energy={airConditioner.data.energy} sound={airConditioner.data.sound}
					airConditionerPrice={airConditioner.data.airConditionerPrice} klimaImage={airConditioner.data.klimaImage} energyImage={airConditioner.data.energyImage}
					/>
				))
			  }
		</ul>
	</section>
	<Footer></Footer>
</Layout>

<style>
	div {
        width: 100%;
        background-color: var(--main-blue-color);
        display: flex;
        justify-content: center;
        margin-top: 48px;
    }
    h1 {
        color: var(--white-text-color);
        padding: 30px 0 30px 0;
        margin: 0;
        font-size: var(--font-size-xl);
        width: var(--width-for-mobile);
		font-family: var(--root-font-family);
    }
	section {
		width: 100%;
		display: flex;
		justify-content: center;
	}
	ul {
		width: var(--width-for-mobile);
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(auto, 340px));
		gap: 20px;
		justify-content: center;
		padding: 0;
	}
	@media (min-width: 1024px) {
    	h1, ul {
        	width: var(--width-for-desktop);
    	}
	}
</style>