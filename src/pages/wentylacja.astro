---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SubPageHeader from '../components/SubPageHeader.astro';
const allVentilations = await getCollection("ventilations");
import Ventilation from "../components/Ventilation.astro";
---

<Layout title="Wentylacja">
	<Header></Header>
	<SubPageHeader subPageName="Wentylacja"/>
	<ul>
		{
			 allVentilations.map((ventilation) => (
        		<Ventilation workType={ventilation.data.workType} ventilationDescription={ventilation.data.ventilationDescription} ventilationImageList={ventilation.data.ventilationImageList}/>
    		))
		  }
	</ul>
	<Footer></Footer>
</Layout>

<style>
	ul {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 0;
		margin: 0;
	}
</style>