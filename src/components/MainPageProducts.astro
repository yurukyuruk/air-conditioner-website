<section>
    <div class="wrapper">
        <a href="./klimatyzacje">
            <img src="./images/pompa.png" alt="Klimatyzacje">
            <h5>Klimaczja</h5>
        </a>
        <a href="./pompy-ciepla">
            <img src="./images/pompa.png" alt="Pompy Ciepła">
            <h5>Pompy Ciepła</h5>
        </a>
        <a href="./wentylacja">
            <img src="./images/pompa.png" alt="Wentylacja">
            <h5>Wentylacja</h5>
        </a>
    </div>
</section>

<style>
    section {
        width: 100%;
        display: flex;
        justify-content: center;
        font-family: var(--root-font-family);
        margin-top: 40px;
    }
    .wrapper {
        width: var(--width-for-mobile);
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }
    a {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        margin-top: 40px;
        transition: box-shadow 0.3s ease-in-out;
    }
    a:hover, a:active {
        box-shadow: rgba(0, 0, 0, 0.438) 0px 2px 8px;
    }
    img {
        width: var(--width-for-mobile);
    }
    h5 {
        color: var(--black-text-color);
        font-size: var(--font-size-l);
        margin: 0;
        padding: 10px 0 10px 0;
    }
    @media (min-width: 720px) {
        section {
            margin-top: 80px;
        }
        a {
            width: calc(100% / 3);
            margin-top: 0;
        }
        .wrapper {
            width: var(--width-for-mobile);
        }
    }
    @media (min-width: 1024px) {
        a {
            width: calc(96% / 3);
        }
        .wrapper {
            width: var(--width-for-desktop);
        }
        .wrapper {
        display: flex;
        justify-content: space-between;
        }
    }
    
</style>