    </nav>
</section>

<style>
    .header {
        font-size: var(--font-size-m);
        display: flex;
        flex-direction: column;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
        align-items: center;
        position: fixed;
        top: 0;
        transition: top 0.3s;
        width: 100%;
        background-color: var(--main-background-color);
        z-index: 2;
    }
    .header-hidden {
        top: -74px; 
    }
    .scroll-hidden {
        display: none;
    }
    .header-content {
        padding-top: 10px;
        padding-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: var(--width-for-mobile);
        font-family: var(--root-font-family);
    }
    .logo-part {
        display: flex;
        align-items: center;
        padding-left: 0;
    }
    h2 {
        font-weight: bold;
        margin: 0;
        align-self: end;
        color: var(--main-blue-color);
        padding-left: 6px;

    }
    .m-letter {
        color: var(--main-blue-color);
    }
    .s-letter {
        color: var(--main-red-color);
    }
    a {
        text-decoration: none;
        font-family: var(--root-font-family);
        color: var(--main-blue-color);
        cursor: pointer;
    }
    a:active, a:hover {
        color: black;
    }
    label {
        position: relative;
    }
    input[type="checkbox"] {
        position: absolute;
        z-index: 1;
        width: 30px;
        height: 30px;
        top: -16px;
        left: -34px;
        cursor: pointer;
        opacity: 0;
    }
    .bar {
        position: absolute;
        cursor: pointer;
        display: flex;
        justify-content: center;    
    }
    .bar .middle {
        height: 3px;
        width: 30px;
        background-color: var(--main-red-color);
        border-radius: 50px;
        position: absolute;
        right: 0;
        transition: 0.3s ease;
    }
    .bar .top {
        bottom: 7px;
        height: 3px;
        width: 30px;
        background-color: var(--main-red-color);
        border-radius: 50px;
        position: absolute;
        right: 0;
        transition: 0.3s ease;
    }
    .bar .bottom {
        top: 10px;
        height: 3px;
        width: 30px;
        background-color: var(--main-red-color);
        border-radius: 50px;
        position: absolute;
        right: 0;
        transition: 0.3s ease;
    }
    input[type="checkbox"]:checked ~ .bar .top {
        transform: rotate(-45deg);
        width: 35px;
        transform-origin: middle;
        top: -2px
    }
    input[type="checkbox"]:checked ~ .bar .bottom {
        transform: rotate(45deg);
        width: 35px;
        transform-origin: middle;
        top: -2px
    }
    input[type="checkbox"]:checked ~ .bar .middle {
        transform: translateX(20px);
        opacity: 0;
    }
    nav {
        font-size: var(--font-size-m);
        position: fixed;
        top: 48px;
        transition: top 0.1s;
        z-index: 1;
        height: calc(100% - 48px); /*47px is where nav starts from the top*/
        background-color: var(--main-background-color);
        width: 100%;
    }
    .hidden {
        display: none;
    }
    ul {
        margin: 0;
        padding: 0;
    }
    li {
        display: flex;
        justify-content: center;
        padding-top: 10px;
        padding-bottom: 10px;
    }
    li:hover, li:active {
        background-color: var(--light-gray-color);
    }
    nav ul li a {
        width: var(--width-for-mobile);
    }
    .active {
        color: black;
        font-weight: bold;
    }
    @media (min-width: 768px) {
        .header {
            display: none;
        }
        nav {
            font-size: var(--font-size-s);
        }
    }
</style>