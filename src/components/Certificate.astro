---
import Layout from '../layouts/Layout.astro';
const { certificateBrand, certificateText, certificateImageURL} = Astro.props
---
<Layout title="Certificates">
    <div class="pop-up">
        <div class="background"></div>
        <img class="big-image" src={certificateImageURL}>
        <button>x</button>
    </div>
    <section>
        <h2>{certificateBrand}</h2>
        <p>{certificateText}</p>
        <img class="small-image" src={certificateImageURL}>
    </section>
</Layout>

