<style>
    .header {
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
        display: flex;
        justify-content: center;
        position: fixed;
        top: 0;
        transition: top 0.3s;
        width: 100%;
        background-color: var(--main-background-color);
        z-index: 2;
    }
    .header-hidden {
        top: -74px; 
    }
    .header-content {
        display: flex;
        justify-content: space-between;
        width: var(--width-for-desktop);
        font-family: var(--root-font-family);
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .logo-part {
        display: flex;
        align-items: center;
        padding-left: 0;
    }
    #logo-header {
        font-size: var(--font-size-xl);
        color: var(--main-blue-color);
        padding-left: 6px;
        font-weight: bold;
        margin: 0;
    }
    .m-letter {
        color: var(--main-blue-color);
    }
    .s-letter {
        color: var(--main-red-color);
    }
    ul, nav {
        display: flex;
        align-items: center;
        margin: 0;
    }
    ul {
        padding: 0;
    }
    li {
        display: flex;
        list-style-type: none;
        align-content: center;
    }
    a {
        font-size: var(--font-size-s);
        padding-left: 20px;
        cursor: pointer;
        text-decoration: none;
        color: var(--main-text-color);
    }
    a:hover {
        color: var(--main-red-color);
    }
    .active {
        color: var(--main-red-color);
        font-weight: bold;
    }

    @media (max-width: 1024px) {
        .header-content {
        width: var(--width-for-mobile);
        }
    }
    @media (max-width: 910px) {
        a {
            padding-left: 10px;
        }
    }
    @media (max-width: 768px) {
        .header {
            display: none;
        }
    }
</style>